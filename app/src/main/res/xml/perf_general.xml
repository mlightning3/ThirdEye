<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings">

    <PreferenceCategory
        android:title="@string/file_settings_title"
        android:key="perf_general">
        <EditTextPreference
            android:defaultValue="Default"
            android:inputType="textCapWords"
            android:key="filename"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/default_filename"
            android:summary="@string/default_filename_summary"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/video_settings_title"
        android:key="perf_video" >
        <CheckBoxPreference
            android:key="media_saving"
            android:title="@string/media_saving"
            android:summary="@string/media_saving_summary"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:key="image_manip"
            android:title="@string/image_manip"
            android:summary="@string/image_manip_summary"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:key="focus_control"
            android:title="@string/focus_controls"
            android:summary="@string/focus_controls_summary"
            android:defaultValue="false" />
        <CheckBoxPreference
            android:key="light_control"
            android:title="@string/light_control"
            android:summary="@string/light_control_summary"
            android:defaultValue="true" />

        <!-- This will open a dialog asking to set the screen_timeout_value -->
        <Preference
            android:key="screen_timeout"
            android:title="@string/screen_timeout_title"
            android:summary="@string/screen_timeout_summary" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/user_settings_title"
        android:key="perf_user">
        <EditTextPreference
            android:defaultValue="developmentkey"
            android:key="userkey"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/user_key"
            android:summary="@string/user_key_summary"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/network_settings_title"
        android:key="perf_network">
        <EditTextPreference
            android:defaultValue="Pi_AP"
            android:key="ssid"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/network_ssid"
            android:summary="@string/network_ssid_summary"/>
        <EditTextPreference
            android:defaultValue="raspberry"
            android:key="passphrase"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/network_password"
            android:summary="@string/network_password_summary"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/extra_bits_title"
        android:key="extra_bits" >
        <Preference
            android:key="about"
            android:title="@string/about_title"
            android:summary="@string/about_summary" />
        <Preference
            android:key="debug_logs"
            android:title="@string/log_title"
            android:summary="@string/debug_logs_summary" />
    </PreferenceCategory>

</PreferenceScreen>